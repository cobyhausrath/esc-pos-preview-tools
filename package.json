{
  "name": "esc-pos-preview-tools",
  "version": "0.1.0",
  "description": "Parses ESC POS commands to make an HTML preview of what would be printed. Provides a passthrough socket for use with existing tools and the ability to accept/reject a previewed job before forwarding it to the printer.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.mjs",
      "require": "./dist/parser/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.mjs",
      "require": "./dist/renderer/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "escpos-send": "./bin/escpos-send.js",
    "printer-bridge": "./bin/printer-bridge.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "preview": "tsx scripts/generate-previews.ts",
    "demo:build": "tsx scripts/build-demo.ts",
    "feedback": "bash scripts/dev-feedback.sh",
    "prepublishOnly": "yarn build && yarn test run",
    "start": "node dist/index.js",
    "start:dev": "tsup --watch & node --watch dist/index.js",
    "bridge": "node bin/printer-bridge.js",
    "bridge:dev": "node --watch bin/printer-bridge.js",
    "server": "node server/api-server.js",
    "server:dev": "node --watch server/api-server.js",
    "app:dev": "vite --config app/vite.config.ts",
    "app:build": "tsc -p app/tsconfig.json && vite build --config app/vite.config.ts",
    "app:preview": "vite preview --config app/vite.config.ts",
    "app:typecheck": "tsc -p app/tsconfig.json --noEmit"
  },
  "keywords": [
    "esc-pos",
    "thermal-printer",
    "receipt-printer",
    "preview",
    "pos",
    "printer",
    "escpos",
    "receipt",
    "thermal",
    "barcode",
    "qrcode",
    "proxy",
    "passthrough",
    "print-preview",
    "socket",
    "tcp-proxy",
    "print-approval"
  ],
  "author": "cobyhausrath",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cobyhausrath/esc-pos-preview-tools.git"
  },
  "bugs": {
    "url": "https://github.com/cobyhausrath/esc-pos-preview-tools/issues"
  },
  "homepage": "https://github.com/cobyhausrath/esc-pos-preview-tools#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.11",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "express": "^4.18.2",
    "iconv-lite": "^0.6.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "ws": "^8.16.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
